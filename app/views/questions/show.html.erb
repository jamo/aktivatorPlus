<h1><%= @course.name%> </h1>
<p id="notice"><%= notice %></p>
<h2><%= @question.name%>
</h2>
<% if  @current_user%>
  <% if @question.active?%>
    <%= button_to "Deactivate",course_question_activate_path(@course, @question, :activate => false) , :method => :activate %>
  <% else %>
    <%= button_to "Activate",course_question_activate_path(@course, @question, :activate => true) , :method => :activate %>
  <% end %>
<% end %>

<ol>
  <% @question.answer_options.each do |ao|  %>
    <li>
      <%= ao.title %>:
      <%= ao.answers.count %>
    </li>

  <% end %>
</ol>
<p> <%= pluralize(@answerCount, 'answer')  %> </p>
<% if   @current_user and  @question.active? %>
  <%= link_to 'Active answer url', new_course_question_answer_path(@course.id, @question.id)%>
<% end %>

<br />
<br />
<%= image_tag(@chart)  %>
<br />
<%= link_to 'Return back', courses_path %>
<br />
<br />
<% if @current_user %>
  <% if @comments.empty?%>
    <h3>No Comments</h3>
  <% end %>

  <%= pluralize(@comments.size, 'comment') unless @comments.empty? %>
  <% @comments.each do |c| %>
    <div class="commentComment">
      <p ><%= c.created_at%>
      <p id="poikki"><%= c.body%></p>
      </p>
    </div>
    <br />
  <% end %>
<% end %>
<% if @current_user and @current_user.admin? %>
  <%= button_to 'Delete', course_question_path, confirm: "Do you really want to delete this question and it's answers", method: :delete %>
<% end %>

