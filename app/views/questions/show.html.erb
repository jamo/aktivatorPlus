<h1>Course: <%= @course.name%> </h1>
<p id="notice"><%= notice %></p>
<h2>Question: <%= @question.name%>
</h2>
<% if session[:user_id]%>
  <% if @question.active?%>
    <%= button_to "Deactivate",user_to_admin_path(@user, :activate => false) , :method => :makeAdmin %>
  <% else %>
    <%= button_to "Activate",user_to_admin_path(@user, :activate => true) , :method => :makeAdmin %>
  <% end %>
<% end %>

<ol>
  <% @question.answer_options.each do |ao|  %>
    <li>
      <%= ao.title %>:
      <%= ao.answers.count %>
    </li>

  <% end %>
</ol>
<% if  session[:user_id] and  @question.active? %>
  <%= link_to 'Active answer url', new_course_question_answer_path(@course.id, @question.id)%>
<% end %>

<br />
<br />
<%= image_tag(@chart)  %>

<% if @admin %>
  <% if @comments.empty?%>
    <h3>Ei kommentteja</h3>
  <% end %>
  <% @comments.each do |c| %>
    <div class="commentComment">
      <p ><%= c.created_at%>
      <p id="poikki"><%= c.body%></p>
      </p>
    </div>
    <br />
  <% end %>
<% end %>
