= form_for([@course, @course.questions.build]) do |f|
  .field
    = 'Question:'
    = f.text_field :name,  :class =>'inputti', :size => 50
    %br/
    - @number_of_answer_options = 20
    - for i in (1..@number_of_answer_options)
      = "Answer option "+i.to_s
      = text_field_tag ('answer_option'+i.to_s).to_sym, nil, :class =>'inputti', :size=>50
      %br/
  .actions
    = f.submit "Save"
