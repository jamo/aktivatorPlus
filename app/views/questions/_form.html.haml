= form_for([@course, @course.questions.build], :html => { :class => 'form-horizontal' }) do |f|
  .control-group
    = f.label 'Question:'
    = f.text_field :name, :class => 'text_field', :placeholder=>"Question name"
  .control-group
    - @number_of_answer_options = 20
    - for i in (1..@number_of_answer_options)
      = "Answer option "+i.to_s
      = text_field_tag ('answer_option'+i.to_s).to_sym, nil,  :class => 'text_field', :placeholder=>"Answer option #{i.to_s}"
      %br/
  .form-actions
    = f.submit "Save", :class => 'btn btn-primary'
