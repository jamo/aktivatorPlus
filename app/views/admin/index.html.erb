<% if flash[:warning] or flash[:notice] %>
  <div id="notice" <% if flash[:warning] %>class="warning"<% end %>>
    <%= flash[:warning] || flash[:notice] %>
  </div>
  <script type="text/javascript">
    setTimeout("new Effect.Fade('notice');", 15000)
  </script>
<% end %>

<% if session[:user_id]%> <h1>Welcome</h1>
  It's <%= Time.now %>
  <br/>
  We have <%= pluralize(@total_courses, "course") %>.
  <br/>
  We have <%= pluralize(@total_questions, "question") %>.
  <br/>
  We have <%= pluralize(@total_answer_options, "answer option") %>.
  <br/>
  We have <%= pluralize(@total_answers, "answer") %>.
  <br/>
<% else %>
  <p><font color="red" size="+5">Access denied</font></p>
<% end %>
